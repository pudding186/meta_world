  <field name="owner_guid"         		type="uint64" comment="拥有者GUID"/>
  <field name="map"       				type="uint32" comment="地图"/>
  <field name="x"    					type="uint32" comment="x坐标"/>
  <field name="y"   					type="uint32" comment="y坐标"/>
  <field name="placed_time"    			type="uint32" comment="放置时间"/>
  <field name="placed_status"   		type="uint32" comment="放置状态"/>
  <field name="replaced_time"  			type="uint32" comment="替换时间"/>
  <field name="replaced_player_guid"    type="uint64" comment="替换的玩家GUID"/>
  <field name="replaced_player_name"	type="varchar"  length="255" comment="替换的玩家名字"/>
